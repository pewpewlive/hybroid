env FmathHelpers as Level 

use Fmath

pub fn Length(fixed x, fixed y) -> fixed
  => Sqrt(x * x + y * y)

pub fn Normalize(fixed x, fixed y) -> (fixed, fixed) {
  if x == 0f and y == 0f {
    return 0f, 0f
  }

  let len = Length(x, y)

  if len == 0f {
    return 0f, 0f
  }

  return x / len, y / len
}

pub fn Clamp(fixed val, fixed min, fixed max) -> fixed {
  if val > max {
    return max
  }
  if val < min {
    return min
  }

  return val
}