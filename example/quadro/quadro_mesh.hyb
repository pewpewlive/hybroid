env QuadroMesh as Mesh

use Table

let a = 20

pub meshes = [
  struct {
    vertexes = [[-a, -a], [a, -a], [a, a], [-a, a]]
    segments = [[0, 1, 2, 3, 0]]
    colors = [0xffffffff, 0xffffffff, 0xffffffff, 0xffffffff]
  }
]

let mesh = meshes[1]

Insert(mesh.segments, [])
repeat 10 with i {
  Insert(mesh.vertexes, [0, a * i])
  Insert(mesh.segments[2], i + 2)
  Insert(mesh.colors, 0xffffffff)
}
